/* 
Activité 2 : gestionnaire de contact
*/



/*
0:afficher le message bienvenue dans le gestionnaire avec les options
		1=lister les contacts tableau,les afficher dans console
		2=ajouter un contact, un prompt pour le nom et un prompt pour le prenom, 
			un message de confirmation s'affiche pour dire que le contact a bien été ajouté 
		0=quitter, n'affiche pas de prompt mais un message au revoir
aprés l'option1 ou 2 le message des options possibles doit s'afficher

*/

console.log("Bienvenue dans ce gestionnaire de contact");

//fonction pour afficher les options, a utiliser plusieures fois
function afficheOption(){
	console.log("\n inscrivez 1 pour afficher la liste des contacts");
	console.log(" inscrivez 2 pour ajouter des contacts");
	console.log(" inscrivez 0 pour quitter le programme \n ");
	};
	
afficheOption();


//creation de l'objet prototype pour les contacts et leur description
			var Contact={
				initContact:function(nom,prenom){
					this.nom=nom;
					this.prenom=prenom;
					},
				description:function(){
					var descript="Nom : "+this.nom+", prenom : "+this.prenom;
					return descript;
					}
				};
				
//initialisation des contacts avant ajout de nouveau contact	
			var Contact1=Object.create(Contact);
				Contact1.initContact("Levis","Carolle");

			var Contact2=Object.create(Contact);
				Contact2.initContact("Nelsonne","Mélodie");
			
//affichage par une fonction de la description des contacts par défaut 
			mesContacts=[Contact1,Contact2];
			
			function afficheContact (mesContacts){
					mesContacts.forEach(function(contact){
							 						console.log(contact.description());
							 						});
			};

//ajout du nouveau contact avec son noms et prenom, sous format d'objet
			function ajoutContact(mesContacts,Contact){
					var leNom=prompt("Veuillez inscrire un nom de famille");
					var lePrenom=prompt("Veuillez inscire un prenom");
					var newContact=Object.create(Contact);
						newContact.initContact(leNom,lePrenom);
					//var descriptNouveauContact="Nom : "+leNom+", prenom : "+lePrenom;
					mesContacts.push(newContact);
					console.log("le nouveau contact a été ajouté à la liste");	
				}
				
//afficher la fenetre de dialogue tant que l'on inscrit pas zero, activation des fonctions selon la valeur inscrite					
			var choixOption="";

			while (choixOption!=="0"){
				choixOption=prompt("Vueillez choisir une option, 1, 2 ou 0");
				
				if(choixOption==="1"){	 
					afficheContact(mesContacts);
					afficheOption();
				}
				else if(choixOption==="2"){
					ajoutContact(mesContacts,Contact);
					afficheOption();
					}
				};
				
//si inscription de zero, affichage message d'au revoir				
			if(choixOption==="0"){
				console.log("Au revoir, merci d'avoir participé");
				}
